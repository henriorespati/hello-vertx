<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.redhat.rharyanto.hellovertx">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight{%-5level} [%t] %style{%-40logger{1.}} : %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.redhat.rharyanto.hellovertx" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>